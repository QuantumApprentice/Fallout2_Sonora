      call NodeStopDialog11;
   end
   else if (getQuest(GVAR_VAULT27_GO_MERC) == qStart) then begin
      if (local_var(LVAR_Timer_Invis) == 0) then begin
      call NodeStopDialog;
      end
      else if (local_var(LVAR_Timer_Invis) < game_time) then begin
