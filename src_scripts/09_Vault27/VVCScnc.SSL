      end
      else begin
      call NodeFstDialog200;
      end
   end
   else if (getQuest(GVAR_VAULT27_STATUS_MERC) < qEnd) then begin
      call NodeFstDialog300;
   end
   else begin
      call NodeSndDialog;
   end
end

